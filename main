    <script>
        document.getElementById('fame-form').addEventListener('submit', function (event) {
            event.preventDefault();
            const nameInput = document.getElementById('name');
            const name = nameInput.value.trim();
            if (name) {
                const fameList = document.getElementById('fame-list');
                const listItem = document.createElement('li');
                listItem.textContent = name;
                fameList.appendChild(listItem);

                // Store permanently in localStorage
                let names = JSON.parse(localStorage.getItem('hallOfFame')) || [];
                names.push(name);
                localStorage.setItem('hallOfFame', JSON.stringify(names));

                nameInput.value = '';
            }
        });

        // Load names from localStorage on page load
        window.addEventListener('load', function () {
            const names = JSON.parse(localStorage.getItem('hallOfFame')) || [];
            const fameList = document.getElementById('fame-list');
            names.forEach(name => {
                const listItem = document.createElement('li');
                listItem.textContent = name;
                fameList.appendChild(listItem);
            });
        });
    </script>
